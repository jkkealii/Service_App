<% include helper/_header %>

<% include helper/_navbar %>

<div class="pagelet" data-transparent-navbar="false"></div>

<div class="container-fluid">
  <% if (locals.alerts) { %>
    <% alerts.forEach(function(alert) { %>
      <% include helper/_alert %>
    <% }) %>
  <% } %>
</div>

<div class="container page-contains text-center">
  <div class="section-title center">
    <h2 class="animated slideInDown"><%= (locals.userObj ? locals.userObj.firstName : 'Lorenzo') %> <strong><%= (locals.userObj ? locals.userObj.lastName : 'Malone') %></strong></h2>
    <div class="line">
      <hr>
    </div>
  </div>
</div>

<div class="container">
  <div class="row spaced">
        <div class="col-xs-1 col-xs-offset-3 side-stat">
      <div class="stat-circle-small">
        <div class="hour-stat-small animated bounceInDown">
          <strong><%= (locals.userObj ? locals.userObj.onCampusHours : 'n/a') %></strong>
        </div>
        <div class="animated pulse">
          <div class="stat-text-small">
            on-campus
          </div>
          <div class="stat-text-small">
            hours
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xs-2 col-xs-offset-1 center-stat">
      <div class="stat-circle">
        <div class="hour-stat animated infinite pulse">
          <strong><%= (locals.userObj ? locals.userObj.hours : 'n/a') %></strong>
        </div>
        <div class="animated pulse">
          <div class="stat-text">
            total
          </div>
          <div class="stat-text">
            hours
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xs-1 col-xs-offset-1 side-stat">
      <div class="stat-circle-small">
        <div class="hour-stat-small animated bounceInDown">
          <strong><%= (locals.userObj ? locals.userObj.offCampusHours : 'n/a') %></strong>
        </div>
        <div class="animated pulse">
          <div class="stat-text-small">
            off-campus
          </div>
          <div class="stat-text-small">
            hours
          </div>
        </div>
      </div>
    </div>
    
  </div>
  
  <div class="space"></div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="input-group spaced"> <span class="input-group-addon search-bar"><i class="fa fa-search"></i>  Search</span>
        <input id="filter-search" type="text" class="form-control search-text-box" placeholder="Type here...">
      </div>
    </div>
    
    <div class="col-sm-3">
      <div class="checkbox spaced">
        <label class="check-text"><input type="checkbox" value="" id="show-past-events" disabled>Show past events</label>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped sortable-theme-bootstrap" data-sortable>
      <thead>
        <tr>
          <th>Event</th>
          <th data-sortable-type="date">Date & Time</th>
          <th data-sortable="false">Location</th>
          <th>On/Off Campus</th>
          <th data-sortable="false">Actions</th>
        </tr>
      </thead>
      <tbody class="searchable">

      </tbody>
    </table>
  </div>
</div>

<% include helper/_basecode %>

<script type="text/javascript" src="/js/user.js"></script>

<% include helper/_footer %>