<% include helper/_header %>

<% include helper/_navbar %>

<div class="container-fluid">
  <% if (locals.alerts) { %>
    <% alerts.forEach(function(alert) { %>
      <% include helper/_alert %>
    <% }) %>
  <% } %>
</div>

<div class="container page-contains text-center">
    <div class="section-title center">
      <h2 class="animated slideInDown">Crimson Circle <strong>Members</strong></h2>
      <div class="line">
        <hr>
      </div>
    </div>
</div>
<div class="container" id="users">
    <div class="row">
        <div class="col-md-3">
          <a href="/events/signup" class="btn buton btn-default spaced">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New User
          </a>
        </div>
        <div class="col-md-6">
          <div class="input-group spaced"> <span class="input-group-addon search-bar">Search</span>
            <input id="filter-search" type="text" class="form-control search-text-box" placeholder="Type here...">
          </div>
        </div>
        <div class="col-md-3">
          <div class="checkbox spaced">
            <label><input type="checkbox" value="">Show inactive members</label>
          </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped sortable-theme-bootstrap" data-sortable>
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Year</th>
              <th data-sortable="numeric">Hours</th>
              <th data-sortable="false">Actions</th>
            </tr>
          </thead>
          <tbody class="searchable">
            
          </tbody>
        </table>
    </div>
</div>

<% include helper/_basecode %>

<% include helper/_footer %>