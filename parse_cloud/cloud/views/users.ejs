<% include helper/_header %>

<% include helper/_navbar %>

<div class="container-fluid">
  <% if (locals.alerts) { %>
    <% alerts.forEach(function(alert) { %>
      <% include helper/_alert %>
    <% }) %>
  <% } %>
</div>

<div class="container" id="users">
    <h1>Crimson Circle Members</h1>
    <div class="row">
        <div class="col-md-3">
          <a href="/events/signup" class="btn btn-primary spaced">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New User
          </a>
        </div>
        <div class="col-md-4">
          <div class="btn-group spaced" role="group" aria-label="filter">
            <button type="button" class="btn btn-default">First Name</button>
            <button type="button" class="btn btn-default">Last Name</button>
            <button type="button" class="btn btn-default">Year</button>
            <button type="button" class="btn btn-default">Hours</button>
          </div>
        </div>
        <div class="col-md-3">
          <div class="checkbox spaced">
            <label><input type="checkbox" value="">Show inactive members</label>
          </div>
        </div>
        <div class="col-md-3">
          <div class="input-group spaced"> <span class="input-group-addon">Search</span>
            <input id="filter-search" type="text" class="form-control" placeholder="Type here...">
          </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped sortable-theme-bootstrap" data-sortable>
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Year</th>
              <th>Hours</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="searchable">
            
          </tbody>
        </table>
    </div>
</div>

