{
  "name": "service_app",
  "version": "0.0.0",
  "description": "The server for lmucrimsoncircle.com",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "mocha --recursive --require mocha-istanbul 'test' && istanbul report text-summary lcov",
    "lint": "eslint server.js **/*.js",
    "report": "istanbul report",
    "report-summary": "istanbul report text-summary lcov",
    "codecov": "mocha --recursive --require mocha-istanbul 'test' && istanbul report && codecov",
    "db-start": "mkdir -p db; mkdir -p log; mongod --fork --logpath $(npm bin)/../../log/mongodb.log --dbpath $(npm bin)/../../db",
    "db-stop": "kill $(ps aux | grep mongod | awk  '{print $2}')",
    "db-seed": "mongoimport --db local --collection events"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkkealii/Service_App.git"
  },
  "keywords": [
    "Service",
    "App",
    "LMU",
    "Crimson",
    "Circle",
    "CrimsonCircle"
  ],
  "author": "Josh Kuroda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jkkealii/Service_App/issues"
  },
  "homepage": "https://github.com/jkkealii/Service_App#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.7.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "mocha-istanbul": "^0.3.0"
  },
  "dependencies": {
    "config": "^1.21.0",
    "good": "^7.0.2",
    "good-console": "^6.1.2",
    "good-squeeze": "^5.0.0",
    "hapi": "^15.0.2",
    "inert": "^4.0.2",
    "joi": "^9.0.4",
    "mongodb": "^2.2.10",
    "nunjucks-hapi": "^2.1.0",
    "vision": "^4.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jasmine": true,
      "jquery": true,
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {},
    "rules": {
      "no-extra-parens": 2,
      "curly": 2,
      "eqeqeq": 2,
      "no-eval": 2,
      "no-global-assign": 2,
      "no-lone-blocks": 2,
      "no-multi-spaces": 2,
      "no-return-assign": 2,
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "func-style": [
        2,
        "expression"
      ],
      "comma-spacing": 2,
      "computed-property-spacing": 2,
      "func-call-spacing": 2,
      "indent": 2,
      "key-spacing": 2,
      "keyword-spacing": 2,
      "semi-spacing": 2,
      "space-in-parens": 2,
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "spaced-comment": 2,
      "lines-around-comment": 2,
      "max-len": [
        2,
        128
      ],
      "new-parens": 2,
      "no-tabs": 2,
      "operator-linebreak": [
        2,
        "after"
      ],
      "no-console": 1,
      "semi": [
        2,
        "always"
      ]
    }
  }
}
