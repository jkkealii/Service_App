{
  "name": "service_app",
  "version": "0.0.0",
  "description": "The server for lmucrimsoncircle.com",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "mocha --recursive --require mocha-istanbul 'test' && istanbul report text-summary lcov",
    "jslint": "jslint '**/*.js, !node_modules/**/*.js'",
    "report": "istanbul report",
    "report-summary": "istanbul report text-summary lcov",
    "codecov": "mocha --recursive --require mocha-istanbul 'test' && istanbul report && codecov",
    "db-start": "mkdir -p db; mkdir -p log; mongod --fork --logpath $(npm bin)/../../log/mongodb.log --dbpath $(npm bin)/../../db",
    "db-stop": "kill $(ps aux | grep mongod | awk  '{print $2}')",
    "db-seed": "mongoimport --db local --collection events"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkkealii/Service_App.git"
  },
  "keywords": [
    "Service",
    "App",
    "LMU",
    "Crimson",
    "Circle",
    "CrimsonCircle"
  ],
  "author": "Josh Kuroda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jkkealii/Service_App/issues"
  },
  "homepage": "https://github.com/jkkealii/Service_App#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "istanbul": "^0.4.5",
    "jslint": "^0.10.3",
    "mocha": "^3.0.2",
    "mocha-istanbul": "^0.3.0"
  },
  "dependencies": {
    "config": "^1.21.0",
    "good": "^7.0.2",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^15.0.2",
    "inert": "^4.0.2",
    "mongodb": "^2.2.10",
    "nunjucks-hapi": "^2.1.0",
    "vision": "^4.1.0"
  }
}
